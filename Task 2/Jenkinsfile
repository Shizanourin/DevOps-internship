pipeline {
    agent any // Run on any available agent

    stages {
        stage('Build') {
            steps {
                dir('Task 2') {
                    echo 'Building application...'
                    // Run npm install on Windows
                    bat 'npm install'
                }
            }
        }

        stage('Test') {
            steps {
                dir('Task 2') {
                    echo 'Testing application...'
                    // Run npm test on Windows
                    bat 'npm test'
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('Task 2') {
                    echo 'Deploying application with Docker...'
                    // Docker commands on Windows
                    bat 'docker build -t simple-node-app .'
                    // Windows batch doesnâ€™t support "|| true", so use "|| exit 0"
                    bat 'docker stop my-app || exit 0'
                    bat 'docker rm my-app || exit 0'
                    bat 'docker run -d --name my-app -p 8081:8080 simple-node-app'
                }
            }
        }
    }
}
